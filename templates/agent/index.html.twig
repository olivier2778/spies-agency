{% extends 'base.html.twig' %}

{% block title %}Agent index{% endblock %}

{% block body %}
    <h1>Agent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Agent_last_name</th>
                <th>Agent_first_name</th>
                <th>Agent_birth_date</th>
                <th>Agent_identification_code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agent in agents %}
            <tr>
                <td>{{ agent.id }}</td>
                <td>{{ agent.agentLastName }}</td>
                <td>{{ agent.agentFirstName }}</td>
                <td>{{ agent.agentBirthDate ? agent.agentBirthDate|date('Y-m-d') : '' }}</td>
                <td>{{ agent.agentIdentificationCode }}</td>
                <td>
                    <a href="{{ path('agent_show', {'id': agent.id}) }}">show</a>
                    <a href="{{ path('agent_edit', {'id': agent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('agent_new') }}">Create new</a>
{% endblock %}
