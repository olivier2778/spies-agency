{% extends 'base.html.twig' %}

{% block title %}Liste des Pays{% endblock %}

{% block main %}
   
    <table class="table">
        <thead>
            <tr>                
                <th>Country_name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>                
                <td>{{ country.countryName }}</td>
                <td>
                    <a href="{{ path('country_show', {'id': country.id}) }}">Voir</a>
                    <a href="{{ path('country_edit', {'id': country.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>  

    {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('country_new') }}">Cr√©ation nouveau Pays</a>        
    {% endif %}    

{% endblock %}
