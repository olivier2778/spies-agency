{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contact_last_name</th>
                <th>Contact_first_name</th>
                <th>Contact_birth_date</th>
                <th>Contact_code_name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.contactLastName }}</td>
                <td>{{ contact.contactFirstName }}</td>
                <td>{{ contact.contactBirthDate ? contact.contactBirthDate|date('Y-m-d') : '' }}</td>
                <td>{{ contact.contactCodeName }}</td>
                <td>
                    <a href="{{ path('contact_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>   

    {% if is_granted('ROLE_ADMIN') %}
             <a href="{{ path('contact_new') }}">Cr√©ation nouveau Contact</a>         
    {% endif %}    
    
{% endblock %}
