{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block main %}
   
    <table class="table">
        <tbody>            
            <tr>
                <th>Contact_last_name</th>
                <td>{{ contact.contactLastName }}</td>
            </tr>
            <tr>
                <th>Contact_first_name</th>
                <td>{{ contact.contactFirstName }}</td>
            </tr>
            <tr>
                <th>Contact_birth_date</th>
                <td>{{ contact.contactBirthDate ? contact.contactBirthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Contact_code_name</th>
                <td>{{ contact.contactCodeName }}</td>
            </tr>
            <tr>
                 <th>Nationnalité</th>
                 <td>{{ contact.nationality }}</td>  
            </tr>           
        </tbody>
    </table>

    <a href="{{ path('contact_index') }}">Retour à la liste</a>

    <a href="{{ path('contact_edit', {'id': contact.id}) }}">Modifier</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
