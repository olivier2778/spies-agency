{% extends 'base.html.twig' %}

{% block title %}Cible{% endblock %}

{% block main %}

  <div class="row">

    <div class="col-4"></div>           

    <div class="col-4">  
 
        <table class="table">
            <tbody>            
                <tr>
                    <th>Nom</th>
                    <td>{{ target.targetLastName }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ target.targetFirstName }}</td>
                </tr>
                <tr>
                    <th>Date de Naissance</th>
                    <td>{{ target.targetBirthDate ? target.targetBirthDate|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Code d'identification</th>
                    <td>{{ target.targetCodeName }}</td>
                </tr>                
                <tr>
                    <th>Nationalité</th>
                    <td>{{ target.nationality.nationalityName }}</td>   
                </tr>

            </tbody>
        </table>

        <a href="{{ path('target_index') }}">Retour à la liste</a>

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('target_edit', {'id': target.id}) }}">Modifier</a>
            {{ include('target/_delete_form.html.twig') }}
        {% endif %}               
       
        

    </div>
 </div>

{% endblock %}
