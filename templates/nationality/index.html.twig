{% extends 'base.html.twig' %}

{% block title %}Liste des Nationalités{% endblock %}

{% block main %}
   
    <table class="table">
        <thead>
            <tr>                
                <th>Nationalité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nationality in nationalities %}
            <tr>                
                <td>{{ nationality.nationalityName }}</td>
                <td>
                    <a href="{{ path('nationality_show', {'id': nationality.id}) }}">Voir</a>
                    <a href="{{ path('nationality_edit', {'id': nationality.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
             <a href="{{ path('nationality_new') }}">Création nouvelle Nationalité</a>  
    {% endif %}    

{% endblock %}
